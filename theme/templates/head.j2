<link rel="stylesheet" type="text/css" href="{{ SITEURL }}/theme/css/style.css" />
<link rel="shortcut icon" href="{{ SITEURL }}/theme/img/favicon.ico" type="image/x-icon">
<link rel="icon" href="{{ SITEURL }}/theme/img/favicon.ico" type="image/x-icon">
{% if GOOGLE_ANALYTICS_ID %}
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '{{ GOOGLE_ANALYTICS_ID }}', '{{ GOOGLE_ANALYTICS_SITENAME }}');
      ga('send', 'pageview');

    </script>
{% endif %} 
<script type="text/javascript">
	$(function() {
    //this is a subpage rather an index
		if(location.pathname.split("/")[1]!='') {
      $('.nav a[href^="/' + location.pathname.split("/")[1] + '"]').parents('ul.nav > li').addClass('active');  
    }
    //this is a secondary subpage
    if(location.pathname.split("/")[2]!='') {
      pagePath=location.pathname.split("/")[2];
      $('.nav a[href*="'+pagePath+'"]').parent('li').addClass('active')
    }

	});
</script>

